<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_start_less_margin_size"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_name_size"
                tools:text="Name" />

            <TextView
                android:id="@+id/tv_title_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_start_more_margin_size"
                android:layout_marginTop="@dimen/title_top_less_margin_size"
                android:textSize="@dimen/title_type_size"
                tools:text="Type" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_start_more_margin_size"
                android:layout_marginTop="@dimen/title_top_less_margin_size"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_year_size"
                    tools:text="Year" />

                <TextView
                    android:id="@+id/tv_title_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/title_start_more_margin_size"
                    android:textSize="@dimen/title_country_size"
                    tools:text="Country" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_start_more_margin_size"
                android:layout_marginTop="@dimen/title_top_less_margin_size"
                android:textSize="@dimen/title_director_size"
                tools:text="Director" />

            <TextView
                android:id="@+id/tv_title_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/title_start_more_margin_size"
                android:layout_marginTop="@dimen/title_top_less_margin_size"
                android:textSize="@dimen/title_rating_size"
                tools:text="Rating" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tv_title_poster"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_start_less_margin_size"
            android:layout_marginTop="@dimen/title_top_more_margin_size"
            android:layout_marginEnd="@dimen/title_start_less_margin_size"
            android:contentDescription="@string/poster_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_title_plot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/title_start_less_margin_size"
        android:layout_marginTop="@dimen/title_top_more_margin_size"
        android:layout_marginEnd="@dimen/title_start_less_margin_size"
        android:textSize="@dimen/title_plot_size"
        tools:text="Plot" />

</LinearLayout>